BoxLayout:
	orientation:"horizontal"
	padding:[5,5,5,5]
	GridLayout:
		cols: 2
		padding:[5,5,5,5]
		id:first
		GridLayout:
			rows: 2
			id:data
			size_hint: (0.3,1.0)
			GridLayout:
		        cols: 1
		        rows:300
		        id:labels
			Image:
				id: prev
		        source: "archi.png"

		        # create initial image to be 400 pixels width
		        size: 64,64 / self.image_ratio




		BoxLayout:
			orientation:"vertical"
			id:im_cont
			size_hint: (0.7,1.0)
			GridLayout:
				rows: 1
				cols: 10
				id: buts
				size_hint: (0.9,0.08)

			Image:
				id: image
		        source: "archi.png"

		        # create initial image to be 400 pixels width
		        size: 32,32 / self.image_ratio
